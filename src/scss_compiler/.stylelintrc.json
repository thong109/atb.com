{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-property-sort-order-smacss"
  ],
  "plugins": [
    "./gulpfile.js/config/plugins/stylelint-spell-check-scss.mjs",
    "./gulpfile.js/config/plugins/stylelint-classname-check-scss.mjs"
  ],
  "rules": {
    "alpha-value-notation": null,
    "block-no-empty": null,
    "color-function-notation": null,
    "color-hex-length": "short",
    "declaration-block-no-duplicate-properties": true,
    "declaration-block-no-shorthand-property-overrides": true,
    "function-url-quotes": "always",
    "length-zero-no-unit": true,
    "max-nesting-depth": [3, { "ignore": ["blockless-at-rules", "pseudo-classes"], "ignoreRules": ["/.*::.*/"] }],
    "no-descending-specificity": true,
    "at-rule-disallowed-list": ["import"],
    "scss/at-rule-no-unknown": true,
    "no-duplicate-selectors": null,
    "no-empty-source": null,
    "number-max-precision": null,
    "property-no-vendor-prefix": null,
    "selector-attribute-quotes": null,
    "selector-max-id": 0,
    "selector-no-vendor-prefix": null,
    "selector-pseudo-class-no-unknown": null,
    "selector-pseudo-element-no-unknown": null,
    "shorthand-property-no-redundant-values": true,
    "value-no-vendor-prefix": null,
    "declaration-block-no-redundant-longhand-properties": [true, {
      "ignoreShorthands": ["inset"]
    }],
    "media-feature-range-notation": null,
    "declaration-no-important": true,
    "rule-empty-line-before": ["always", {
      "except": ["first-nested"]
    }],
    "selector-class-pattern": [
      "^[a-z][-a-z0-9]+(__[-a-z0-9]+)*(--[a-z0-9]+)*$",
      {
        "message": "Selector violates BEM Convention",
        "resolveNestedSelectors": true
      }
    ],
    "plugin/spell-check-scss": true,
    "plugin/classname-check-scss": true
  }
}
